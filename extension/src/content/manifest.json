{
    "name": "Long Distance",
    "description": "This extension allows users to create lobbies and invite friends to simultaneously stream Netflix content.",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "declarativeContent",
        "activeTab",
        "*://*.netflix.com/watch/*",
        "*://netflix.com/watch/*"
    ],
    "background": {
        "scripts": [
            "background.bundle.js"
        ],
        "persistent": true
    },
    "page_action": {
        "default_popup": "popup.html"
    }
}