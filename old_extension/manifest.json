{
    "name": "Long Distance Netflix",
    "description": "This extension allows users to establish a server-client connection to simultaneously stream Netflix content.",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "storage",
        "*://*.netflix.com/watch/*",
        "*://netflix.com/watch/*"
    ],
    "background": {
        "scripts": [
            "build/background.bundle.js"
        ]
    },
    "page_action": {
        "default_popup": "popup.html"
    }
}